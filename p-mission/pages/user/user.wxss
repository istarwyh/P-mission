.container {
  background-color: #eee;
  padding-bottom: 60px;
  width: 100%;
  text-align: center;
  border-bottom: 20rpx solid #f5f5f5;
}

.top {
  width: 100%;
}

.my-info .avatar {
  width: 176rpx;
  height: 176rpx;
  border-radius: 50%;
}

.my-info .my-info-name {
  color: #293539;
  font-size: 76rrpx;
  margin-top: 10rpx;
  position: relative;
}

.my-info .my-info-name text {
  width: 10rpx;
  height: 10rpx;
  position: absolute;
  border: 4rpx solid #a78845;
  border-radius: 50%;
  margin-left: 10rpx;
}
.middle {
  color: #444;
  background-color: #fff;
  padding: 6px 10px;
  margin:14px 0 10px 0;
}

.bottom {
  color: #444;
  background-color: #fff;
  padding: 6px 10px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin: 0 auto 10px auto;
}
.uname {
  font-weight: bold;
  margin-bottom: 10px;
}
.info {
  font-size: 12px;
  color: #fff;
}

.weui-panel {
    width:100%
}

.my-view-info {
  display: flex;
  flex-flow: row nowrap;
  height: 40px;
  justify-content: space-between;
  padding: 6px 10px;
  border-bottom: 1px solid #eee;
  align-items: center;
}

.my-txt-desc {
  font-size: 14px;  
}

.my-icon {
  color: #444;
  font-size: 14px;
}

.border-none {
  border: none;
}
